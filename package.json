{
  "name": "rss-box",
  "version": "19.12.10",
  "description": "RSS Box Viewer",
  "main": "src/app.js",
  "scripts": {
    "build": "yarn build:app & yarn build:box & yarn build:main",
    "build:app": "rollup -c",
    "build:box": "rollup -c -i src/box.js -o dist/box.js -n box",
    "build:main": "rollup -c -i src/main.js -o dist/main.js -n main",

    "client": "yarn build & serve dist",
    "client:box": "yarn build:main & serve dist & rollup -c -w -i src/box.js -o dist/box.js -n box",
    "client:deploy": "rsync -avz --delete dist/ p3k:/var/www/p3k.org/rss/",
    "client:stage": "rsync -avz --delete dist/ p3k:/var/www/p3k.org/rss-stage/",
    "client:watch": "yarn build & serve dist & rollup -c -w",

    "server": "(cd services; python main.py)",
    "server:datastore": "export DATASTORE_EMULATOR_HOST=localhost:8081; export DATASTORE_PROJECT_ID=p3k-services; gcloud beta emulators datastore start",
    "server:deploy": "(cd services; gcloud app deploy --no-promote)",
    "server:index": "(cd services; gcloud datastore indexes create index.yaml)",
    "server:install": "(cd services; pip install -r requirements.txt)",
    "server:tasks": "(cd services; gcloud app deploy cron.yaml")
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/p3k/rss-box.git"
  },
  "author": "Tobi Sch√§fer <interface@p3k.org>",
  "license": "CC-BY-SA-3.0",
  "bugs": {
    "url": "https://github.com/p3k/rss-box/issues"
  },
  "homepage": "https://github.com/p3k/rss-box#readme",
  "devDependencies": {
    "domready": "^1.0.8",
    "rollup": "^0.52.0",
    "rollup-plugin-buble": "^0.18.0",
    "rollup-plugin-commonjs": "^8.2.6",
    "rollup-plugin-json": "^2.3.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-svelte": "^3.2.0",
    "rollup-plugin-uglify": "^2.0.1",
    "serve": "^7.1.3"
  }
}
