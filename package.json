{
  "name": "rss-box",
  "version": "19.12.15",
  "description": "RSS Box Viewer",
  "main": "src/app.js",
  "scripts": {
    "app": "(trap 'kill 0' INT; yarn client & yarn server)",
    "build": "yarn build:app; yarn build:box; yarn build:main",
    "build:app": "rollup -c",
    "build:box": "rollup -c -i src/box.js -o dist/box.js -n box",
    "build:main": "rollup -c -i src/main.js -o dist/main.js -n main",
    "client": "yarn build; serve -l 8000 dist",
    "client:box": "yarn build:main & serve -l 8000 dist & rollup -c -w -i src/box.js -o dist/box.js -n box",
    "client:deploy": "rsync -avz --delete dist/ p3k:/var/www/p3k.org/rss/",
    "client:install": "if [ ! -e src/local.js ]; then echo 'export const urls = {};' > src/local.js; fi",
    "client:stage": "rsync -avz --delete dist/ p3k:/var/www/p3k.org/rss-stage/",
    "client:watch": "yarn build & serve -l 8000 dist & rollup -c -w",
    "install": "yarn client:install; yarn server:install",
    "server": "(cd services; make server)",
    "server:datastore": "(cd services; make datastore)",
    "server:deploy": "(cd services; make upload)",
    "server:index": "(cd services; make index)",
    "server:install": "git submodule init; yarn server:update; (cd services; make install)",
    "server:tasks": "(cd services; make tasks)",
    "server:update": "git submodule update --remote --merge"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/p3k/rss-box.git"
  },
  "author": "Tobi Sch√§fer <interface@p3k.org>",
  "license": "CC-BY-SA-3.0",
  "bugs": {
    "url": "https://github.com/p3k/rss-box/issues"
  },
  "homepage": "https://github.com/p3k/rss-box#readme",
  "devDependencies": {
    "domready": "^1.0.8",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-prettier": "^3.1.2",
    "prettier": "^1.19.1",
    "rollup": "^0.52.0",
    "rollup-plugin-buble": "^0.18.0",
    "rollup-plugin-commonjs": "^8.2.6",
    "rollup-plugin-json": "^2.3.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-svelte": "^3.2.0",
    "rollup-plugin-uglify": "^2.0.1",
    "serve": "^7.1.3"
  }
}
